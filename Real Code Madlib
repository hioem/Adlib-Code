import java.util.Scanner;

/**
 * Write a description of class MadlibGenerator here.
 *
 * @author (your name)
 * @version (a version number or a date)
 */
public class MadlibGenerator
{
    public static void main(String[] args) {
    
        Scanner keyboardInput = new Scanner(System.in);
        
        System.out.print("What is your name?: ");
        String name = keyboardInput.nextLine();
        System.out.print("Enter the number month: ");
        int month = keyboardInput.nextInt();
        System.out.print("Enter the number day: ");
        int day = keyboardInput.nextInt();
        System.out.print("Enter the number day: ");
        int year = keyboardInput.nextInt();
        keyboardInput.nextLine();
        System.out.print("Enter a person: ");
        String person = keyboardInput.nextLine();
        System.out.print("Enter an adjective: ");
        String adjective = keyboardInput.nextLine();
        System.out.print("Enter an adjective: ");
        String adjective1 = keyboardInput.nextLine();
        System.out.print("Enter a noun: ");
        String noun = keyboardInput.nextLine();
        System.out.print("Enter an adjective: ");
        String adjective2 = keyboardInput.nextLine();
        System.out.print("Enter a noun: ");
        String noun1 = keyboardInput.nextLine();
        System.out.print("Enter an adjective: ");
        String adjective3 = keyboardInput.nextLine();
        System.out.print("Enter an adjective: ");
        String adjective4 = keyboardInput.nextLine();
        System.out.print("Enter a verb : ");
        String verb = keyboardInput.nextLine();
        System.out.print("Enter a verb : ");
        String verb1 = keyboardInput.nextLine();
        System.out.print("Enter a verb : ");
        String verb2 = keyboardInput.nextLine();
        System.out.print("Enter an adjective: ");
        String adjective5 = keyboardInput.nextLine();
        System.out.print("Enter a verb : ");
        String verb3 = keyboardInput.nextLine();
        System.out.println(name);
        System.out.println(month + "/" + day + "/" + year);
        System.out.println("Yesterday, " + person + " and I went to the park.");
        System.out.println("On our way to the " + adjective + " park, we saw a(n) " + adjective1 +" "+ noun + " on a bike.");
        System.out.println("We also saw big " + adjective2 + " balloons tied to a(n) " + noun1 + ".");
        System.out.println("Once we got to the " + adjective3 + " park, the sky turned " + adjective4 + ".");
        System.out.println("It started to " + verb + " and " + verb1 + ".");
        System.out.println(person + " and I " + verb2 + " all the way home.");
        System.out.println("Tomorrow we will try to go to the " + adjective5 + " park again and hope it doesn't " + verb3 + ".");
    }
}
